<div class='container'>
  <div class='row'>
    <div class='span12'>
      <% if @notes %>
      <%counter = 1%>
        <%@notes.each do |note| %>
          <div class="display_note">
            title: <%=note.title%>
            <br>
            <%if note.author%>
              author: <%=note.author%>
            <%end%>
            <br>
            content :<%=note.content%>
            <% note_id = "note" + counter.to_s %>
            <a href="#<%= note_id %>" data-toggle="modal">Update</a>
            <%= partial(:_update_note, :locals => {note_id: note_id, note: note}) %>
            <% counter += 1 %>
            <a class="delete_note" href="/notes/<%=note.id%>">Delete</a>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
